#!/bin/bash
set -e

# Automatically added by dh_makeshlibs
if [ "$1" = "configure" ]; then
	ldconfig
fi
# End automatically added section

if ! [ -a /etc/openisr/hostid ]; then

	dd if=/dev/urandom bs=4 count=1 | od -An -t d4 | tr -d " -" > /etc/openisr/hostid 2> /dev/null

fi

echo -e "\n"
echo "You will need the openisr kernel module and a virtual machine monitor,"
echo "see /usr/share/doc/openisr/README.Debian for more info."
