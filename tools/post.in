use strict;
use warnings;
use Term::ANSIColor;
use constant {
	SBINDIR => "!!SBINDIR!!",
};

sub fail ($) {
	my $msg = shift;

	print colored("Failed: $msg", "red") . "\n";
	exit 1;
}

sub warning ($) {
	my $msg = shift;

	print colored("Warning: $msg", "yellow") . "\n";
}

sub status ($) {
	my $msg = shift;

	print colored($msg, "green") . "\n";
}

fail "You must be root."
	if $> != 0;

# Print final thoughts
status "Setup succeeded.";

exit 0;
